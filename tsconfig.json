{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "rootDir": "./",
    "outDir": "dist",
    "paths": {},
    "allowJs": true,
    "declaration": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/migrations/**/*.ts"]
}
